<!--我的收货地址-->
{{#if hasData}}
<div class="address">
  <h2>我的收货地址</h2>
  <div class="address-table">
    <table>
      <thead>
        <tr>
          <th class="col1">收货人</th>
          <th class="col2">收货地区</th>
          <th class="col3">收货地址</th>
          <th class="col4">手机号</th>
          <th class="col5">操作</th>
        </tr>
      </thead>
      <tbody>
        {{#each addressList}}
        <tr>
          <td class="col1">{{recName}}</td>
          <td class="col2">{{nationName}}{{provinceName}}{{cityName}}{{regionName}}</td>
          <td class="col3">{{detail}}</td>
          <td class="col4">{{cellphone}}</td>
          <td class="col5">
            <a class="text-link order-edit" href="javascript:void(0)" data-index="{{@index}}" data-isDefault="{{isDefault}}">编辑</a>
            <a class="text-link order-del" href="javascript:void(0)" data-index="{{@index}}" data-isDefault="{{isDefault}}">删除</a>
            {{#if isDefault}}
            <span class="label label-disabled">默认地址<i></i></span>
            {{else}}
            <a data-index="{{@index}}" href="" class="label label-error btn-setDefault">设为默认</a>
            {{/if}}
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>    
</div>
{{/if}}