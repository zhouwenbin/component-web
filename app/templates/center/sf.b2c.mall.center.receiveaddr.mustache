<h2>收货地址管理  {{#isover addressList}}<span class="error-side"><span class="icon icon26">{{errorText}}</span></span>{{/isover}}</h2>
{{^if hasData}}
<div class="order-b active">
  <div class="order-r2" id="addAdrArea"></div>
  <a href="javascript:void(0)" id="btn-add-addr" class="btn btn-add">+ 添加收货地址</a>
</div>
{{/if}}

{{#if hasData}}
<div class="order-b active" id="addrList">
  <ul>
    {{#each addressList}}
    <li class="clearfix active" name="addrEach" data-addressid="{{addrId}}" data-isDefault="{{isDefault}}">
      <div class="order-r1 clearfix">
        <div class="order-r1c2 fr">
          <span class="text-error">默认地址</span>
          <a href="#" class="btn btn-add">设为默认</a>
          <a class="order-edit" href="javascript:void(0)" data-index="{{@index}}" data-isDefault="{{isDefault}}">修改</a>
          <a class="order-del" href="javascript:void(0)" data-index="{{@index}}" data-isDefault="{{isDefault}}">删除</a>
        </div>
        <ul class="order-r1c3">
          <li><span>{{nationName}}</span><span>{{provinceName}}</span><span>{{cityName}}</span><span>{{regionName}}</span><span>{{detail}}</span></li>
          <li><span>{{recName}}</span><span>|</span><span>{{credtNum}}</span></li>
          <li><span>联系方式：{{cellphone}}</span><span>|</span><span>{{zipCode}}</span></li>
        </ul>
      </div>
      <div class="order-r2" id="editAdrArea"></div>
    </li>
    {{/each}}
  </ul>
  <div class="order-r2" id="addAdrArea"></div>
  <a href="javascript:void(0)" id="btn-add-addr" class="btn btn-add">+ 添加地址信息</a>
</div>
{{/if}}