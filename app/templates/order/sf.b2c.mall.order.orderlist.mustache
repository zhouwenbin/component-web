<ul class="myorder-tab">
  <li class="{{#if tab.allorderTab}}active{{/if}}" tag="allorderTab"><a href="">所有订单</a></li>
  <li class="{{#if tab.notPayOrderListTab}}active{{/if}}" tag="notPayOrderListTab"><a href="">待付款<strong>{{waitCompletedNum}}</strong></a></li>
  <li class="{{#if tab.notSendOrderListTab}}active{{/if}}" tag="notSendOrderListTab"><a href="">待发货<strong>{{waitPayNum}}</strong></a></li>
  <li class="{{#if tab.notGetOrderListTab}}active{{/if}}" tag="notGetOrderListTab"><a href="">待收货<strong>{{waitShippingNum}}</strong></a></li>
</ul>

<!--所有订单-->
{{#if orderListIsNotEmpty}}
<div class="myorder-search">
  <input placeholder="输入订单号搜索" id="searchValue"><button id="search">搜索</button>
  <div class="searchNoResult visuallyhidden" style="display:inline-block;">
    <span class="icon icon88"></span>
    <span class="text-error">未搜索到相应订单</span>
  </div>
</div>
<table>
  <thead>
      <tr>
          <th class="th1">包裹<span>|</span></th>
          <th class="th2">商品</th>
          <th class="th3">售价（元）</th>
          <th class="th4">数量<span>|</span></th>
          <th class="th5">实付款（元）<span>|</span></th>
          <th class="th6">订单状态<span>|</span></th>
          <th class="th7">操作</th>
      </tr>
  </thead>
  <tbody>

    {{#each orders}}
      <tr>
        <th colspan="7" data-orderid='{{orderId}}'>
          <h2>订单号：{{orderId}}<span>下单时间：{{sf.time gmtCreate}}</span>
          {{#isShowDeleteIcon orderStatus}}<a href="javascript:" class="deleteOrders icon icon81">删除</a>{{/isShowDeleteIcon}}
          </h2>
        </th>
      </tr>

      {{#each orderPackageItemList}}
        <tr>
          <td>
            {{! 专门显示包裹信息 }}
            {{#packageNo}}
            <span class="label label-error">
              <span class="icon icon79"></span>包裹{{getPackageNum @index}}<i></i>
            </span>
            {{/packageNo}}
            <div>共{{countGoodsInPackage orderGoodsItemList}}件商品</div>
            {{#packageNo}}
            <p class="myorder-address"><span class="icon icon80"></span>{{shippingWarehouse}}仓库发货</p>
            {{/packageNo}}
          </td>

          <td colspan="3">
            {{! 嵌套一个专门table用于显示商品 售价 和数量 }}
            <table>
              {{#each orderGoodsItemList}}
                    {{! 第一行不能显示border-top，不然会有两层线条 }}
                    {{#first orderGoodsItemList @index}}
                    <tr>
                      <td class="td2" style="border:none;width:291px">
                        <img src="{{productImage.thumbImgUrl}}" alt="" />
                        <h3>{{goodsName}}</h3></td>
                      <td style="border:none;">
                        <del>{{sf.price originPrice}}</del>
                        <div>{{sf.price price}}</div>
                      </td>
                      <td style="border:none;">{{quantity}}</td>
                    </tr>
                    {{/first}}
                    {{^first orderGoodsItemList @index}}
                    <tr>
                      <td class="td2" style="border-bottom:none;border-left:none;border-right:none;width:291px">
                        <img src="{{productImage.thumbImgUrl}}" alt="" />
                        <h3>{{goodsName}}</h3></td>
                      <td style="border-bottom:none;border-left:none;border-right:none;">
                        <del>{{sf.price originPrice}}</del>
                        <div>{{sf.price price}}</div>
                      </td>
                      <td style="border-bottom:none;border-left:none;border-right:none;">{{quantity}}</td>
                    </tr>
                    {{/first}}
              {{/each}}
            </table>

          </td>

          {{#firstPackage orderPackageItemList @index}}
            <td rowspan="{{countTypeOfGoodsInOrder orderPackageItemList}}">
              ￥{{sf.price paymentAmount}}
            </td>
          {{/first}}

          <td>
            <div>{{orderStatus}}</div>
              {{#if showRouter}}
              <div class="table-1-logistics" data-orderid="{{orderId}}" data-suborderid="{{subOrderId}}">
                <div class="tooltip-pos">
                  <a class="myorder-link find-route-list" href="javascript:void(0);">查看物流</a>
                  <div class="tooltip-outer">
                    <div class="tooltip" id="traceList">
                      努力加载中
                    </div>
                  </div>
                </div>
              </div>
              {{/if}}
          </td>

          {{#firstPackage orderPackageItemList @index}}
            <td data-orderid='{{orderId}}' data-recid='{{rcvrId}}' data-suborderid="{{subOrderId}}" style="padding:5px 0px;" rowspan="{{countTypeOfGoodsInOrder orderPackageItemList}}">
                {{#isNotShowEndTime orderStatus}}
                <span>剩余付款时间</span>
                <div class="showOrderEndTime text-error"></div>
                {{/isNotShowEndTime}}
                {{{optionHMTL}}}
            </td>
          {{/first}}


        </tr>

      {{/each}}<!--end orderPackageItemList-->
    {{/each}}<!--end orders-->
  </tbody>
</table>
<!-- 分页 -->
<div class="sf-b2c-mall-order-orderlist-pagination"></div>
<!-- 分页 -->
{{else}}
  <div class="noOrderShow">

  </div>
{{/if}}

