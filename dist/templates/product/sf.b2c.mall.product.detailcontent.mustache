<div class="goods clearfix">
  <div class="goods-c1 fl">
    <div class="goods-c1r1">
      <img src="{{itemInfo.currentImage}}" alt="" /><span></span>
    </div>
    <div class="goods-c1r2">
      <ul class="clearfix">
        {{#each itemInfo.basicInfo.images}}
        <li class="thumb-item" data-big-pic="{{bigImgUrl}}"><a href=""><img src="{{thumbImgUrl}}" alt="" /></a><span></span></li>
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="goods-c2">
    <h1>{{itemInfo.basicInfo.title}}</h1>
    <p>{{itemInfo.basicInfo.subTitle}}</p>
    <div class="mr1">单价：<strong>¥ {{priceInfo.sellingPrice}}</strong><span>（含税）</span><del>¥ {{priceInfo.originPrice}}</del></div>
    <div class="mr2"><span>{{priceInfo.discount}}折</span>已降{{priceInfo.lessspend}}元</div>
    <div class="mr3">国际物流：{{itemInfo.basicInfo.shippingPoint}}发货 {{itemInfo.basicInfo.orderToDelivery}}</div>
    <div class="mr4">发货商家：{{itemInfo.basicInfo.seller}}</div>
    <div class="mr5">品牌：
      <label class="btn btn-brand active">{{itemInfo.basicInfo.brand}}</label>
    </div>
    {{#each itemInfo.specGroups}}
    <div class="mr6" data-specidorder="{{specIdOrder}}">{{specName}}：
      {{#each specs}}
        {{#if selected}}
        <label data-specid="{{specId}}" class="btn btn-goods active">{{specValue}}<span class="icon icon23"></span></label>
        {{/if}}

        {{^if selected}}
          {{#if canSelected}}
          <label data-specid="{{specId}}" class="btn btn-goods">{{specValue}}<span class="icon icon23"></span></label>
          {{/if}}
          {{^if canSelected}}
          <label data-specid="{{specId}}" class="btn btn-goods disable">{{specValue}}<span class="icon icon23"></span></label>
          {{/if}}
        {{/if}}

      {{/each}}
    </div>
    {{/each}}

    <div class="mr8">购买数量：
      <span class="btn btn-num"><a class="btn-num-reduce" href="#">-</a><a class="btn-num-add" href="#">+</a><input type="text" class="input_txt" value="{{input.buyNum}}" /></span>{{#if input.showRestrictionTips}}每人限购{{priceInfo.accountRestriction}}件{{/if}}
    </div>
    <div class="mr9">
      {{#sf-is-soldout priceInfo.soldOut}}<span class="icon icon26">商品库存不足</span>{{/sf-is-soldout}}
      {{#sf-is-restriction priceInfo.soldOut priceInfo.accountRestriction}}<span class="icon icon26">商品限购{{priceInfo.accountRestriction}}件</span>{{/sf-is-restriction}}
    </div>

    {{^if priceInfo.soldOut}}
      <div class="mr10"><a href="#" class="btn btn-buy">立即购买</a></div>
    {{/if}}

    <!--限时特卖-->
    <div class="u1">
      {{#sf-is-isPromotion priceInfo.soldOut priceInfo.isPromotion}}
        <span class="icon icon6 icon6-2">限时特卖<i></i></span>
        <div class="u1-r1"><span class="icon icon4"></span>{{priceInfo.time}}</div>
      {{/sf-is-isPromotion}}
    </div>
    <!--限时特卖-->
    <!--售完-->
    {{#if priceInfo.soldOut}}
      <span class="icon icon24">售完</span>
    {{/if}}
    <!--售完-->
    <!--7天到--
    <div class="u2">
      <span class="icon icon25"></span><strong>7</strong>天到
    </div>
    <!--7天到-->
    <!--运费-->
    <div class="u3">
      <span class="icon icon5"></span>运费：<span class="icon icon6 icon6-1">免运费<i></i></span>
    </div>
    <!--运费-->
  </div>
</div>
<!--商品-->

<!--推荐商品-->
<div class="recommend">
  <h2>推荐商品</h2>
  <ul class="clearfix">
    {{#each recommendProducts}}
    <li>
      <a class="fl" href=""><img src="{{imgUrl}}" alt="" /></a>
      <div class="recommend-c1">
        <h3><a href="{{link}}">{{title}}</a></h3>
        <div class="recommend-r1">¥{{sellingPrice}}<del>¥{{originPrice}}</del></div>
      </div>
    </li>
    {{/each}}
  </ul>
</div>
<!--推荐商品-->

<!--小编推荐-->
<div class="recommend2" id="recommend2">
  <h2>小编推荐</h2>
  <p>{{itemInfo.basicInfo.recommend}}</p>
</div>
<!--小编推荐-->

<!--详情-->
<div class="detail">
  <div class="detail-h">
    <ul class="clearfix" id="detailattributes">
    {{#each itemInfo.basicInfo.attributes}}
      <li>【{{key}}】 {{value}}</li>
    {{/each}}
    </ul>
  </div>

  <div class="detail-b" id="detailcontent">
    {{itemInfo.basicInfo.description}}
  </div>
</div>

